extends partials/_layout.pug
block content
  .fixedheader-container
    header.e-topnav.e-topnav-fixed
      .e-topnav__container
        .e-topnav__logo.e-topnav__logo-b2c
          e-icon(icon='e-logo')
        input#e-topnav__mobilemenu.e-topnav__mobilemenu(type='checkbox')
        nav.e-menu
          ul.e-menu__list
            li.e-menu__item
              a.e-menu__name(href='index.html') Dashboard
            li.e-menu__item
              a.e-menu__name(href='index.html') Contacts
            li.e-menu__item
              a.e-menu__name(href='index.html') Automation
            li.e-menu__item
              a.e-menu__name(href='index.html') Channels
            li.e-menu__item
              a.e-menu__name(href='index.html') Analysis
            li.e-menu__item
              a.e-menu__name(href='index.html') Smart Insight
            li.e-menu__item
              a.e-menu__name(href='index.html') Predict
            li.e-menu__item
              a.e-menu__name(href='index.html') Admin

        label.e-hamburger(for='e-topnav__mobilemenu')
          span.e-hamburger__line
        .e-iconmenu
          .e-iconmenu__item
            e-dropdown(data-markup-class='e-btn e-btn-customerinfo e-btn-dropdown', data-markup-content='test')
              .e-dropdown__content
                .e-iconmenu__profile
                  .e-iconmenu__profile__header
                    h3
                      a(href='#0') test - admin
                    .e-iconmenu__profile__time
                      span
                        | Tuesday, November 17 12:54 (GMT+1:00)
                  a.e-dropdown__item(href='#0')
                    e-icon(icon='e-profile', type="table") My Profile
                  a.e-dropdown__item(href='#0')
                    e-icon(icon='life-ring', type="table") Online Help
                  a.e-dropdown__item(href='#0')
                    e-icon(icon='e-signout', type="table") Log Out
          .e-iconmenu__item
            e-dropdown(data-markup-class='e-iconmenu__name', data-markup-content="<svg class='e-icon e-icon-search'><use xlink:href='#search'></use></svg>")
              .e-dropdown__content
                .e-search
                  h3
                    label(for='js-function-search-query') Search
                  form(method='get', name='workformsearch')
                    .e-field
                      select.e-select(name='subject')
                        option(value='1//1') in contacts by first name
                        option(value='1//2') in contacts by last name
                        option(value='1//3') in contacts by email
                        option(value='2') in email campaigns
                        option(value='3') in registration forms
                        option(value='4') in segments
                        option(value='5') in lists
                        option(value='6') in bounces
                        option(value='7') in email analysis
                    .e-field
                      input.e-input(type='text', name='needle', placeholder='Search for...', value='', autofocus='')
                    button.e-btn.e-btn-primary(type='submit', title='Search')
                      e-icon(icon='search', color="white")
                      | Search
          .e-iconmenu__item
            .e-iconmenu__name
              span#notification-center-badge.active
                e-icon(icon='bell')
              #notification-center-badge-status.active 6

    .e-container
      .e-header.e-header-flex
        h1 LifestyleLabels 15% Off
        .e-header__button
          .e-buttongroup
            .e-btn View Details

      .e-verticalnav
        e-verticalnav-menu
          e-verticalnav-item(icon="user" value="Dashboard" status="active")
          e-verticalnav-item(icon="mobile" value="Mobile reporting")
          e-verticalnav-item(icon="e-track" value="Link tracking" status="disabled")
        .e-verticalnav__content.e-verticalnav__content-fullheight
          .e-verticalnav__header
            .e-verticalnav__title Reporting
          .e-verticalnav__body
            h2 Individual Link Tracking
            h3 Compare link success for different segments:
            .e-row
              .e-col-6
                include organisms/_segmentselector.pug
              .e-col-6
                include organisms/_segmentselector.pug
